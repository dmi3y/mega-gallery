  },
  "homepage": "https://github.com/dmi3y/mega-gallery#readme",
  "devDependencies": {
    "autoprefixer": "6.3.4",
    "handlebars": "^4.0.5",
    "node-sass": "^3.4.2",
    "postcss-cli": "2.5.1",
    "sane": "1.3.3"
  },
  "dependencies": {}
