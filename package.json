{
  "name": "mega-gallery",
  "version": "1.0.0",
  "description": "Mega gallery for ladies and gentlemen",
  "main": "index.js",
  "scripts": {
    "compile-tmpls": "handlebars -e hbs -c handlebars -p -f build/tmpls.js src/tmpls/*.hbs",
    "watch-tmpls": "sane 'npm run compile-tmpls' --glob=src/tmpls/**/*.hbs",
    "compile-styles": "node-sass src/styles/ -r -o build/",
    "watch-styles": "node-sass -w src/styles/ -r -o -q build/",
    "compile-scripts": "cat src/scripts/*.js > build/mega-gallery.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dmi3y/mega-gallery.git"
  },
  "keywords": [
    "gallery",
    "jquery",
    "jquery-plugin"
  ],
  "author": "Dmitrii Lapshukov",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/dmi3y/mega-gallery/issues"
  },
  "homepage": "https://github.com/dmi3y/mega-gallery#readme",
  "devDependencies": {
    "handlebars": "^4.0.5",
    "node-sass": "^3.4.2",
    "sane": "1.3.3"
  }
}
