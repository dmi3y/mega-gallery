{
  "name": "mega-gallery",
  "version": "1.0.0",
  "description": "Mega gallery for ladies and gentlemen",
  "main": "index.js",
  "scripts": {
    "compile-templates": "tasks/compile-templates.sh",
    "watch-templates": "sane 'npm run compile-templates' --glob=src/templates/**/*.hbs",
    "compile-styles": "node-sass src/styles/ -r -o build/",
    "watch-styles": "node-sass -w src/styles/ -r -o build/",
    "compile-scripts": "cat src/scripts/*.js > build/index.js",
    "watch-scripts": "sane 'npm run compile-scripts' --glob=src/scripts/*.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dmi3y/mega-gallery.git"
  },
  "keywords": [
    "gallery",
    "jquery",
    "jquery-plugin"
  ],
  "author": "Dmitrii Lapshukov",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/dmi3y/mega-gallery/issues"
  },
  "homepage": "https://github.com/dmi3y/mega-gallery#readme",
  "devDependencies": {
    "handlebars": "^4.0.5",
    "node-sass": "^3.4.2",
    "sane": "1.3.3"
  },
  "dependencies": {}
}
